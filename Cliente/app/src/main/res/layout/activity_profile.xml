<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="calc4fun.cliente.ProfileActivity"
    android:background="@drawable/fondopantalla">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ProfileTitle"
        android:layout_alignParentTop="true"
        android:background="@drawable/tuperfil" />

        <TableLayout
            android:layout_below="@+id/ProfileTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0"
            android:stretchColumns="0">



            <TableRow
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_below="@+id/NickAndExpContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/NickName"
                            android:textSize="30sp"
                            android:id="@+id/NickView"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.05"
                            android:textColor="@android:color/background_light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Experience"
                        android:textSize="30sp"
                        android:id="@+id/ExpView"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.05"
                        android:textColor="@android:color/background_light"/>


                </LinearLayout>


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/ImageProfileView"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/WordLevel1"
                    android:textSize="30sp"
                    android:id="@+id/mundonivel"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_weight="0.04"
                    android:textColor="@android:color/background_light"/>
            </TableRow>
            <TableRow>
                <ListView
                    android:id="@+id/listaperfil"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_span="2"
                    android:layout_height="150dp">

                </ListView>
            </TableRow>
            <TableRow android:layout_gravity="bottom">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volver"
                    android:id="@+id/BackButton"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.08" />
            </TableRow>
        </TableLayout>
</RelativeLayout>
